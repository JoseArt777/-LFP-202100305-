digraph "Isla del Error" {
  // Configuración general
  graph [fontname="Arial", rankdir=TB, overlap=false, splines=true];
  node [fontname="Arial", style=filled];
  edge [fontname="Arial"];

  // Lugares
  "Playa" [shape=ellipse, fillcolor="lightblue", label="Playa", pos="0,0!"];
  "Pueblo" [shape=ellipse, fillcolor="white", label="Pueblo", pos="4,1!"];

  // Objetos en coordenadas específicas
  "obj_Llave" [shape=box, fillcolor="white", label=" Llave", pos="3,2!"];

  // Objetos en lugares
  "obj_Libro" [shape=note, fillcolor="navajowhite", label="\uD83D\uDCD5 Libro"];
  "obj_Libro" -> "Pueblo" [label="en", dir=none, style=dotted];
  "obj_Mapa" [shape=box, fillcolor="white", label=" Mapa"];
  "obj_Mapa" -> "Pueblo" [label="en", dir=none, style=dotted];
  "obj_Gema" [shape=egg, fillcolor="deepskyblue", label="\uD83D\uDC8E Gema"];
  "obj_Gema" -> "att" [label="en", dir=none, style=dotted];

  // Conexiones entre lugares
  "Playa" -> "too" [label="sendero", color="saddlebrown", style=dashed];
  "Isla" -> "Pueblo" [label="lancha", color="blue", style=solid];
}
